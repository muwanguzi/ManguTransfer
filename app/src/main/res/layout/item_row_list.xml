<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e2e4fe"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:descendantFocusability="afterDescendants">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_row_selector"
            android:padding="8dp">

            <View
                android:id="@+id/vline1"
                android:layout_width="3dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/cash_back_background" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/vline1"
                android:src="@drawable/fish_tank"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:text="description"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/additional_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:textColor="@color/list_txt"
                android:text="additional"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/other_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/additional_text"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="other details"
                android:textColor="@color/list_txt"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/other_details"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:textSize="12dp"
                android:visibility="visible"
                android:text="details"/>

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:textSize="12dp"
                android:text="id"
                android:visibility="visible" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id"
                android:text="data"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15sp"
                android:paddingTop="50sp"
                android:foregroundGravity="center"
                android:src="@mipmap/angle_right_24px" />

            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/additional_text"
                android:layout_marginStart="40dp"
                android:layout_weight="0.5"
                android:background="@drawable/corner_btn_yellow"
                android:elevation="1dp"
                android:focusable="false"
                android:padding="10dp"
                android:text="Details"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/additional_text"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="40dp"
                android:layout_weight="0.5"
                android:background="@drawable/corner_button"
                android:padding="10dp"
                android:text="Pay"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:visibility="gone" />

            <View
                android:id="@+id/hline1"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:background="@color/cash_back_background"
                android:visibility="gone" />

            <View
                android:id="@+id/hline2"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:background="@color/cash_back_background"
                android:visibility="gone" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/arrow"
                android:layout_alignParentRight="true"
                android:text="Delete"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>